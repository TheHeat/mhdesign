---
import { Image } from "astro:assets";


const {project} = Astro.props;
---

<a href={`/projects/${project.slug}`}>
<div class="wrapper">
	<Image class="image" src={project.data.image.path} alt={`Poster image for ${project.data.title}`}/>




	
	<h2 class="title">
			{project.data.title}
		</h2>
	</div>
</a>

 
<style>
	.wrapper{
		background-size: cover;
		background-position: 50%;
		border:solid .5rem white;
		align-content: end;
		border-radius: .1em;
		display: grid;
		grid-template-rows: 1fr min-content;
	}
	
	.image{
		display: block;
		margin: 0;
		width: 100%;
		aspect-ratio: 210/297;
		height: auto;
		grid-row: 1/3;
		grid-column: 1;
	}
	
	h2.title{
		text-align: center;
		font-size: small;
		letter-spacing: .1em;
		width:fit-content;
		background-color:white;
		margin: auto;
		font-weight: 700;
		text-transform: uppercase;
		padding: .5em .75em 0.2em;
		text-wrap: balance;
		grid-row: 2;
		grid-column: 1;
	}

	a{
		color: currentColor;
		text-decoration: none;
	}
</style>