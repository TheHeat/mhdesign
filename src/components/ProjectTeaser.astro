---
import { Image } from "astro:assets";


const {project} = Astro.props;
---

<a href={`/projects/${project.slug}#posterBox`}>
<div class="wrapper">
	
	
	<Image
	class="poster" 
	id={`poster-${project.slug}`}
	loading="eager" 
	src={project.data.image.src} alt={`Poster for the ${project.data.title} project`}/>




	
	<h2 class="title">
			{project.data.title}
		</h2>
	</div>
</a>

 
<style>
	.wrapper{
		background-size: cover;
		background-position: 50%;
		
		align-content: end;
		border: solid var(--length-s) white;
		border-radius: .1em;
		display: grid;
		grid-template-rows: 1fr min-content;
	}
	
	.poster{
		background-color: var(--color-text);
		display: block;
		margin: 0;
		width: 100%;
		aspect-ratio: 210/297;
		height: auto;
		grid-row: 1/3;
		grid-column: 1;
		transition: all ease-in-out 0.25s;
	}
	
	h2.title{
		text-align: center;
		font-size: small;
		letter-spacing: .1em;
		width:fit-content;
		background-color:white;
		margin: auto;
		font-weight: 700;
		text-transform: uppercase;
		padding: .5em .75em 0.2em;
		text-wrap: balance;
		grid-row: 2;
		grid-column: 1;
	}

	a{
		color: currentColor;
		text-decoration: none;
	}
</style>